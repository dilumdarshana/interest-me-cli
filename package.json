{
  "name": "practice-cli",
  "version": "1.0.0",
  "description": "Calculator for interest for a given amount",
  "keywords": [
    "typescript",
    "calculator",
    "interest"
  ],
  "author": "Dilum Darshana <dilum.dar@gmail.com>",
  "license": "MIT",
  "bin": {
    "practice": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle src/index.ts --platform=node --outfile=dist/index.js --packages=external",
    "link-cli": "(yarn --global unlink practice-cli || true) && chmod +x ./dist/index.js && yarn --global link practice-cli",
    "dev": "tsc -w",
    "release": "pnpm run ci && changeset publish"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/node": "^22.5.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "figlet": "^1.7.0"
  }
}
